---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog" description="My blog">
  <section class="mb-12 border-b-2 border-dashed border-border">
    <div class="border-x-2 border-dashed border-border p-4 py-12 sm:mx-12">
      <ul
        class="mx-auto grid max-w-[800px] grid-cols-1 gap-4 px-2 md:grid-cols-1"
      >
        {
          posts.map(async (post) => (
            <li class="block h-full rounded-sm hover:bg-muted/40">
              <a
                href={`/blog/${post.slug}/`}
                class="block h-full border-dashed border-border shadow-xs"
              >
                <div class="p-4 md:p-8">
                  <p class="flex items-center gap-0.5 text-sm text-foreground/60">
                    <FormattedDate date={post.data.pubDate} />
                    <Icon name="lucide:dot" />
                    <span>
                      {
                        (await post.render()).remarkPluginFrontmatter
                          .minutesRead
                      }
                    </span>
                  </p>
                  <h4
                    class="py-2 text-lg font-semibold text-foreground md:text-xl"
                    transition:name={post.data.title}
                  >
                    {post.data.title}
                  </h4>
                  <p class="text-sm text-foreground/80">
                    {post.data.description}
                  </p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
