---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog">
  <section>
    <ul class="mx-auto grid max-w-[800px] grid-cols-1 gap-4 px-2">
      {
        posts.map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}/`}
              class="block rounded border border-border bg-muted shadow-sm"
            >
              <div class="p-4">
                <p class="text-sm text-green-600">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <h4
                  class="py-2 text-lg font-semibold text-foreground"
                  transition:name={post.data.title}
                >
                  {post.data.title}
                </h4>
                <p class="text-sm text-foreground/80">
                  {post.data.description}
                </p>
                {post.data.tags && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="rounded border border-background px-2 py-1 text-xs text-green-700">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
