---
import { Icon } from "astro-icon/components";

const today = new Date();
---

<footer>
  <div
    class="border-border text-foreground relative z-30 border-b-2 border-dashed shadow-xs backdrop-blur-2xl sm:px-12"
  >
    <div class="border-border border-x-2 border-dashed p-8 sm:p-12">
      <div class="flex items-center">
        <div class="grow">
          &copy; {today.getFullYear()} Jack Humes. All rights reserved.
        </div>
        <div class="flex justify-center gap-2">
          <a
            href="https://linkedin.com/in/jackhumes"
            target="_blank"
            class="border-border inline-flex items-center gap-4 rounded-full border p-3"
          >
            <Icon name="lucide:linkedin" class="text-primary size-5" />
          </a>
          <a
            href="mailto:contact@jackhumes.com"
            target="_blank"
            class="border-border inline-flex items-center gap-4 rounded-full border p-3"
          >
            <Icon name="lucide:mail" class="text-primary size-6" />
          </a>

          <a
            href="https://github.com/member87"
            target="_blank"
            class="border-border inline-flex items-center gap-4 rounded-full border p-3"
          >
            <Icon name="lucide:github" class="text-primary size-6" />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
